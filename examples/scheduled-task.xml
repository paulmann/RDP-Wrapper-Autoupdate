<?xml version="1.0" encoding="UTF-16"?>
<Task version="1.4" xmlns="http://schemas.microsoft.com/windows/2004/02/mit/task">
  <!-- 
  RDP Wrapper Auto-update Scheduled Task
  Version: 1.0
  Description: Automatically updates RDP Wrapper configuration from community repositories
  Author: Mikhail Deynekin <m@deynekin.com>
  Repository: https://github.com/paulmann/RDP-Wrapper-Autoupdate
  -->
  
  <RegistrationInfo>
    <Date>2025-01-01T00:00:00</Date>
    <Author>RDP Wrapper Management System</Author>
    <Description>Automatically updates RDP Wrapper configuration from 43+ community repositories. Checks for updates weekly and applies compatible configurations without user intervention. Uses silent mode for scheduled operation.</Description>
    <URI>\RDP Wrapper Autoupdate</URI>
    <Version>1.0</Version>
  </RegistrationInfo>
  
  <Triggers>
    <!-- Weekly trigger - Run every Monday at 3:00 AM -->
    <CalendarTrigger>
      <StartBoundary>2025-01-01T03:00:00</StartBoundary>
      <Enabled>true</Enabled>
      <ScheduleByWeek>
        <DaysOfWeek>
          <Monday />
        </DaysOfWeek>
        <WeeksInterval>1</WeeksInterval>
      </ScheduleByWeek>
    </CalendarTrigger>
    
    <!-- System startup trigger with 5-minute delay -->
    <LogonTrigger>
      <Delay>PT5M</Delay>
      <Enabled>true</Enabled>
    </LogonTrigger>
    
    <!-- Daily trigger at midnight for enterprise environments -->
    <CalendarTrigger>
      <StartBoundary>2025-01-01T00:00:00</StartBoundary>
      <Enabled>false</Enabled>
      <ScheduleByDay>
        <DaysInterval>1</DaysInterval>
      </ScheduleByDay>
    </CalendarTrigger>
  </Triggers>
  
  <Principals>
    <Principal id="Author">
      <UserId>S-1-5-18</UserId>
      <RunLevel>HighestAvailable</RunLevel>
      <LogonType>Password</LogonType>
    </Principal>
  </Principals>
  
  <Settings>
    <IdleSettings>
      <StopOnIdleEnd>true</StopOnIdleEnd>
      <RestartOnIdle>false</RestartOnIdle>
    </IdleSettings>
    <MultipleInstancesPolicy>IgnoreNew</MultipleInstancesPolicy>
    <DisallowStartIfOnBatteries>false</DisallowStartIfOnBatteries>
    <StopIfGoingOnBatteries>false</StopIfGoingOnBatteries>
    <AllowHardTerminate>true</AllowHardTerminate>
    <StartWhenAvailable>true</StartWhenAvailable>
    <RunOnlyIfNetworkAvailable>true</RunOnlyIfNetworkAvailable>
    <AllowStartOnDemand>true</AllowStartOnDemand>
    <Enabled>true</Enabled>
    <Hidden>false</Hidden>
    <RunOnlyIfIdle>false</RunOnlyIfIdle>
    <WakeToRun>false</WakeToRun>
    <ExecutionTimeLimit>PT30M</ExecutionTimeLimit>
    <Priority>7</Priority>
    <RestartOnFailure>
      <Interval>PT5M</Interval>
      <Count>3</Count>
    </RestartOnFailure>
    <DeleteExpiredTaskAfter>PT0S</DeleteExpiredTaskAfter>
  </Settings>
  
  <Actions Context="Author">
    <Exec>
      <!-- 
      Command line parameters explained:
        -noinstall    : Prevents RDP Wrapper installation if not present (critical for scheduled tasks)
        -y            : Answers Yes to all prompts (required for unattended operation)
        -silent       : No console output or user prompts (essential for background operation)
        -log          : Enable logging to rdp_wrapper_manager.log
        -force        : Force update even if current config is compatible (optional, disabled by default)
      -->
      <Command>cmd.exe</Command>
      <Arguments>/C "cd /d "C:\Program Files\RDP Wrapper" && autoupdate.bat -noinstall -y -silent -log"</Arguments>
      <WorkingDirectory>C:\Program Files\RDP Wrapper</WorkingDirectory>
    </Exec>
    
    <!-- Optional email notification on failure (configure for enterprise use) -->
    <ShowMessage>
      <Title>RDP Wrapper Update Failed</Title>
      <Body>The automatic RDP Wrapper configuration update has failed. Please check the log file at C:\Program Files\RDP Wrapper\rdp_wrapper_manager.log for details.</Body>
    </ShowMessage>
  </Actions>
  
  <!-- Task extensions for Windows Server compatibility -->
  <Extensions>
    <ConstraintCollection>
      <NetworkSettings>
        <NetworkProfileName>*</NetworkProfileName>
      </NetworkSettings>
    </ConstraintCollection>
  </Extensions>
</Task>
